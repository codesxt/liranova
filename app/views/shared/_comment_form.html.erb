<%= form_for(@new_comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field span8">
    <%= f.text_area :content, placeholder: "Nuevo Comentario..." %>
  </div>
  <%= f.hidden_field :publication_id, :value => @publication.id %>
  <%= f.submit "Comentar", class: "btn btn-large btn-primary span4" %>
<% end %>
