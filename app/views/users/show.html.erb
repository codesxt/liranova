<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
	<%= render 'shared/user_navigation' %>
    </section>
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
        <% if @user.publications.any? %>
		  <h3>Publicaciones (<%= @user.publications.count %>)</h3>
		  <ol class="microposts">
			<%= render @publications %>
		  </ol>
		  <%= will_paginate @publications %>
		<% end %>	
	</div>
</div>
