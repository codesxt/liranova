<% if signed_in? %>
  <div class="row">
    <aside class="span4">
	  <section>
	    <%= render 'shared/user_navigation' %>
	  </section>
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Publicaciones</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Bienvenido a Liranova</h1>

    <h2>
      Liranova es una plataforma de Literatura Libre para escritores y lectores.
    </h2>

    <%= link_to "¡Regístrate ahora!", signup_path,
                                class: "btn btn-large btn-primary" %><br/>
    <%= link_to "O lee una publicación al azar...", random_path %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
